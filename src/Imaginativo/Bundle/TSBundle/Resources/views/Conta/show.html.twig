{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-sm-6">
    <h1>Conta</h1>
    <table class="record_properties table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Id:</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nome:</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Razão Social:</th>
                <td>{{ entity.razaoSocial }}</td>
            </tr>
            <tr>
                <th>CNPJ:</th>
                <td>{{ entity.cNPJ }}</td>
            </tr>
            <tr>
                <th>Nome Fantasia:</th>
                <td>{{ entity.nomeFantasia }}</td>
            </tr>
            <tr>
                <th>Criado em:</th>
                <td>{{ entity.dtCriacao|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Obs:</th>
                <td>{{ entity.obs }}</td>
            </tr>
            <tr>
                <th>Status:</th>
                <td>{% if entity.status %} Ativo {% else %} Inativo {%endif%}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>    
{% if entity.endereco %}
<div class="row">
    <div class="col-sm-6">
        <h3>Endereço</h3>
        <table class="record_properties table table-striped table-bordered table-condensed">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.endereco.id }}</td>
                </tr>
                <tr>
                    <th>Logradouro</th>
                    <td>{{ entity.endereco.logradouro }}</td>
                </tr>
                <tr>
                    <th>Bairro</th>
                    <td>{{ entity.endereco.bairro }}</td>
                </tr>
                <tr>
                    <th>Cidade</th>
                    <td>{{ entity.endereco.cidade }}</td>
                </tr>
                <tr>
                    <th>Uf</th>
                    <td>{{ entity.endereco.uF }}</td>
                </tr>
                <tr>
                    <th>Cep</th>
                    <td>{{ entity.endereco.cEP }}</td>
                </tr>
            </tbody>
        </table>    
    </div>
</div>
{% endif %}
<div class="row">
    <div class="col-sm-2">
        <a href="{{ path('conta') }}" class="btn btn-primary">
            Ir para a lista de contas
        </a>   
    </div>
    <div class="col-sm-1">
        <a href="{{ path('conta_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Editar
        </a>
    </div>
    <div class="col-sm-1">
        <a href="{{ path('conta_endereco', { 'id': entity.id }) }}" class="btn btn-primary">
            Endereço
        </a>
    </div>
    <div class="col-sm-1">
        <a href="{{ path('conta_endereco', { 'id': entity.id }) }}" class="btn btn-primary">
            Desativar
        </a>
    </div>
    <!-- 
    {{ form(delete_form) }}
    -->   
</div>            

{% endblock %}
