{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Equipe</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Nome:</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Descrição:</th>
                <td>{{ entity.descricao }}</td>
            </tr>
            <tr>
                <th>Obs:</th>
                <td>{{ entity.obs }}</td>
            </tr>
            <tr>
                <th>Criado em:</th>
                <td>{{ entity.dtCriacao|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Status:</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Id:</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <br/>
        <a href="{{ path('equipe') }}" class="btn btn-primary">
            Voltar para a lista de equipes
        </a>
        <br/><br/>
        <a href="{{ path('equipe_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Editar
        </a>
<br/><br/>
    {{ form(delete_form) }}
{% endblock %}
