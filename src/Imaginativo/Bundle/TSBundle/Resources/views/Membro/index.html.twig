{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Membro list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cargo</th>
                <th>Funcao</th>
                <th>Email</th>
                <th>Cargahorariadia</th>
                <th>Obs</th>
                <th>Valorhora</th>
                <th>Status</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('membro_show', { 'id': entity.id }) }}">{{ entity.nome }}</a></td>
                <td>{{ entity.cargo }}</td>
                <td>{{ entity.funcao }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.cargaHorariaDia }}</td>
                <td>{{ entity.obs }}</td>
                <td>{{ entity.valorHora }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('membro_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('membro_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('membro_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
