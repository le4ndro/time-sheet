{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Membro</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Nome:</th>
                <td>{{ entity.nome }}</td>
            </tr>
            <tr>
                <th>Cargo:</th>
                <td>{{ entity.cargo }}</td>
            </tr>
            <tr>
                <th>Função:</th>
                <td>{{ entity.funcao }}</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Carga Horária Diária:</th>
                <td>{{ entity.cargaHorariaDia }}</td>
            </tr>
            <tr>
                <th>Obs:</th>
                <td>{{ entity.obs }}</td>
            </tr>
            <tr>
                <th>Valor Hora:</th>
                <td>{{ entity.valorHora }}</td>
            </tr>
            <tr>
                <th>Status:</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Id:</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="row"> 
        <div class="col-md-8">   
        <a href="{{ path('membro') }}" class="btn btn-primary">
            Ir para a lista de membros
        </a>
    
        <a href="{{ path('membro_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Editar
        </a>
        {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
